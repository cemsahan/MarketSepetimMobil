<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OrderDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:text="Sipariş Deyatları"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />


    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:id="@+id/map_oDetail"
        android:layout_height="200dp">

    </com.google.android.gms.maps.MapView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rv_oDetail"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="Toplam Fiyat"
            android:textColor="#e67e22"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_finishOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:background="#e67e22"
            android:text="Siparişi Gönder"
            android:textColor="#fff" />

    </LinearLayout>



</ScrollView>